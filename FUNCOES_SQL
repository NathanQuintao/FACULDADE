select LOWER(NOME_FUNC) as Nome_Minusculo,
       UPPER(NOME_FUNC) as Nome_Maiusculo FROM func;

select LTRIM(NOME_FUNC) as Nome_Alinhado,
       LENGTH(NOME_FUNC) as Tamanho,
       SUBSTR(NOME_FUNC, 2,5) as Pedaco,
       CONCAT(NOME_FUNC," ",DEPTO) as NOME_FUNC_DEPTO FROM func;
select NOME_FUNC as Nome,
       INSTR(NOME_FUNC,"Caju") as Posicao FROM func;
select NOME_FUNC as NOME_FUNC, salario as Salario FROM func WHERE INSTR(NOME_FUNC,"Couves") != 0;
select ABS(-1328),
       MOD(233,2), PI(), POW(3,4),
       SQRT(ID_FUNC) FROM func WHERE ID_FUNC = 8;
select round(pow(3,4),2);
select round(pi(),4);
select CURDATE(), CURTIME(), DATEDIFF(CURDATE(),"2025-01-01");

DELIMITER |
CREATE FUNCTION GastoDep (id int) returns Decimal(7,2) Deterministic Reads sql data
 Begin
 DECLARE valorGasto Decimal(7,2) DEFAULT 0;
 SELECT COUNT(*) * 200.00 INTO valorGasto FROM Dependente WHERE ID_FUNC_DEP = ID;
 return valorGasto;
 End;
 |

 DELIMITER ;
 select GastoDep(11);




USE inventario;

DELIMITER |
 CREATE FUNCTION DaAumento(cod int, codProduto int)
    RETURNS DECIMAL(7,2)
    Deterministic
    Reads sql data
    Begin
    DECLARE novoPreco DECIMAL(7,2) DEFAULT 0;
    SELECT precoUnitProd INTO novoPreco FROM Produtos WHERE CodProd = codProduto;
    IF (cod=1) THEN SET novoPreco = novoPreco * 1.10;
    ELSE IF (COD=2) THEN SET novoPreco = novoPreco * 1.20;
    ELSE IF (COD=3) THEN SET novoPreco = novoPreco * 1.30;
    END IF; END IF; END IF;
    RETURN novoPreco;
    End |
DELIMITER ;

select DaAumento(1,1026);
select DaAumento(2,1026);
select DaAumento(3,1026);
